
<form action="/alunos/add" method="post" class="form-container-cadastro">
    <h1>Cadastrar Alunos: </h1>

    <div class="form-control">
        <label for="nome">Nome: </label>
        <input type="text" name="nome" placeholder="Digite o nome completo">
    </div>

    <div class="form-control">
        <label for="cpf">CPF: </label>
        <input 
        id="cpf"
        type="text" 
        name="cpf" 
        maxlength="14"
        placeholder="000.000.000-00"
        >
    </div>

    <div class="form-control">
        <label for="telefone">Telefone: </label>
        <input 
        id="telefone"
        type="text" 
        name="telefone" 
        maxlength="15"
        placeholder="(00) 00000-0000"
        >
    </div>

    <div class="form-control">
        <label for="curso">Curso: </label>
        <input type="text" name="curso" placeholder="Digite o curso">
    </div>

    <div class="form-control">
        <label for="instituicao">Instituição: </label>
        <input type="text" name="instituicao" placeholder="Nome da instituição">
    </div>

    <div class="bnt-cadastrar">
        <input type="submit" value="Cadastrar">
    </div>

</form>